<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_add_has_balcao_permission" model="ir.ui.view">
        <field name="name">sale.order.form.add.has.balcao.permission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_header']" position="inside">
                <field name="has_balcao_permission" string="Permission for BalcÃ£o" widget="boolean" attrs="{'invisible': [('state', 'in', ['sale', 'done'])]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_custom_balcao" model="ir.ui.view">
        <field name="name">sale.order.form.custom.balcao</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="l10n_br_sale.l10n_br_sale_order_form"/>
        <field name="arch" type="xml">
            <!-- field name="has_balcao_permission" invisible="1"/-->
            <xpath expr="//field[@name='cfop_id']" position="after">
                <field name="has_balcao_permission" />
            </xpath>


            <xpath expr="//field[@name='cfop_id']" position="attributes">
                <attribute name="attrs">
                    {
                        'invisible': [
                            '|',
                            ('tax_icms_or_issqn', '=', 'issqn'),
                            '|',
                            ('parent.fiscal_operation_id', '=', False),
                            ('has_balcao_permission', '=', True)
                        ]
                    }
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>